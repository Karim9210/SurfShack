{% extends 'base.html.twig' %}

{% block title %}Edit User
{% endblock %}

{% block body %}
	{{ form_start(registrationForm) }}

	<div class='m-2 d-flex justify-content-center'>
		<h1 class="text-center mt-2 text-mainBlue">Update
			{{app.user.pseudo}}'s profil</h1>
	</div>
	<div class="d-flex mt-5 justify-content-center align-items-center flex-column" style="height:100;">
		<div class="col-lg-8 w-50">
			<div class="card ">
				<div class="card-body bg-mainBlue">
					<div class="d-flex justify-content-center align-items-center flex-column mb-4" style="height:100;">

						<div class="row">
							<div class="col-sm-3">
								<img src="{{ vich_uploader_asset( user ) }}" class="rounded-circle" style="height: 200px;width:auto" alt="{{ user.pseudo }}"/>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-sm-3 ">
							<p class="mb-0 mt-4 text-lightPrimary">Username
							</p>
						</div>
						<div class="col-sm-9 mt-4">
							<p class="text-lightPrimary mb-0">{{form_row(registrationForm.pseudo)}}
							</p>
						</div>
					</div>

					<div class="row">
						<div class="col-sm-3">
							<p class="mb-0 text-lightPrimary">Email</p>
						</div>
						<div class="col-sm-9">
							<p class="text-lightPrimary mb-0">{{form_row(registrationForm.email)}}
							</p>
						</div>
					</div>

					<div class="row">
						<div class="col-sm-3">
							<p class="mb-0 text-lightPrimary">Password</p>
						</div>
						<div class="col-sm-9">
							<p class="text-muted mb-0">
								{{ form_row(registrationForm.password) }}

							</p>
						</div>
					</div>

					<div class="row">
						<div class="col-sm-3">
							<p class="mb-0 text-lightPrimary">Profile Picture</p>
						</div>
						<div class="col-sm-9">
							<p class="text-lightPrimary mb-0">
								{{ form_row(registrationForm.pictureFile) }}

							</p>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="d-flex justify-content-center m-5">
			<div class='m-2'>
				{{ include('user/_delete_form.html.twig') }}
				<button type="submit" class="btn btn-primary bg-mainBlue">Update</button>

			</div>
		</div>


		{{ form_rest(registrationForm) }}
	</div>
	{{ form_end(registrationForm) }}
{% endblock %}
