{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<h1>User</h1>
	{% for success, messages in app.flashes %}
		{% for message in messages %}
			<div class="alert alert-{{ success }}">
				{{ message }}
			</div>
		{% endfor %}
	{% endfor %}
	<div class="d-flex justify-content-center align-items-center flex-column mb-4" style="height:100;">

		<div class="row">
			<div class="col-sm-3">
				<img src="{{ vich_uploader_asset( user ) }}" class="rounded-circle" style="height: 200px;width:auto" alt="{{ user.pseudo }}"/>
			</div>
		</div>
	</div>
	<table class="table">
		<tbody>
			<tr>
				<th>Pseudo</th>
				<td>{{ user.pseudo }}</td>
			</tr>

			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>

			<tr>
				<th>Password</th>
				<td>{{ user.password }}</td>
			</tr>
			<tr>
				<th>Picture</th>
				<td>{{ user.picture }}</td>
			</tr>

		</tbody>
	</table>

	{# <a href="{{ path('app_user_index') }}">back to list</a> #}

	<a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>

	{# {{ include('user/_delete_form.html.twig') }} #}
{% endblock %}
