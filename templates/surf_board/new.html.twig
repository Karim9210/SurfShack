{% extends 'base.html.twig' %}

{% block title %}New SurfBoard
{% endblock %}

{% block body %}
	{{ form_start(form) }}

	<div class='m-2 d-flex justify-content-center'>

		<h1 class="text-center mt-2 text-mainBlue">Add a new SurfBoard</h1>
	</div>
	<div class='m-4 d-flex justify-content-center'>
		<div class="d-flex justify-content-center">
			<div class="container rounded-3 col-md-12 mx-auto p-4 m-2 border-start border-end shadow-lg text-mainBlue mb-5 ">

				<form method="POST">
					<div class="row">
						<div class="col p-2 mb-1">
							<label for="nickname">Name</label>
							{{ form_row(form.nickname,{'attr': {'placeholder':'Name'}})}}
						</div>
						<div class="col p-2 mb-1">
							<label for="length">Length</label>
							{{ form_row(form.length,{'attr': {'placeholder':'Length'}})}}
						</div>
					</div>
					<div class="row">
						<div class="col p-2 mb-1">
							<label for="width">Width</label>
							{{ form_row(form.width,{'attr': {'placeholder':'Width'}})}}
						</div>
						<div class="col p-2 mb-1">
							<label for="thickness">Thickness</label>
							{{ form_row(form.thickness,{'attr': {'placeholder':'Thickness'}})}}
						</div>
					</div>
					<div class="row">
						<div class="col p-2 mb-1">
							<label for="type">Type</label>
							{{ form_row(form.type,{'attr': {'placeholder':'Type'}})}}
						</div>
						<div class="col p-2 mb-1">
							{{ form_row(form.price) }}
						</div>
					</div>
					<div class="row">
						<div class="col p-2 mb-1">
							<label for="materail">Material</label>
							{{ form_row(form.material,{'attr': {'placeholder':'Material'}})}}
						</div>
						<div class="col p-2 mb-1">
							<label for="shaper">Shaper</label>
							{{ form_row(form.shaper,{'attr': {'placeholder':'Shaper'}})}}
						</div>
					</div>
					<div class="row">
						<div class="col p-2 mb-1">
							<label for="brand">Brand</label>
							{{ form_row(form.brand,{'attr': {'placeholder':'Brand'}})}}
						</div>
						<div class="col p-2 mb-1">
							<label for="review">Review</label>
							{{ form_row(form.review,{'attr': {'placeholder':'Review'}})}}
						</div>
					</div>
					<div class="row">
						<div class="col p-2 mb-1">
							<label for="date">Date of purchase</label>
							{{ form_row(form.datePurchase,{'attr': {'placeholder':'Date Of Purchase'}})}}
						</div>
						<div class="col p-2 mb-1">
							<label for="new">New</label>
							{{ form_row(form.new)}}
						</div>
					</div>
					<div class='d-flex justify-content-center'>

						<div class="row">
							<div class="col p-2 mb-1">
								<label for="upload">Upload a photo</label>
								{{ form_row(form.boardPictureFile,{'attr': {'placeholder':'Upload a picture'}})}}
							</div>
						</div>
					</div>
					<input type="hidden" name="_target_path" value="/surf/board/">
					<div class='mt-4 d-flex justify-content-center'>
						<button type="submit" class="btn btn-primary bg-mainBlue">{{ button_label|default('Add a Board') }}</button>
					</div>
					{{ form_rest(form) }}
				</form>
			</div>
		</div>

	</div>

</div>
{{ form_end(form) }}{% endblock %}
